<br>

<div id="itemDiv" class="container w-100 p-0 rounded">

<div class="table-responsive">

<table class="table table-hover w-100 m-0 ">
  <thead class="table table-borderless">
    <tr>
      <th> items</th>
      <th>Type item</th>
      <th>Description</th>
      <th>Aditional</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item. items %></td>
        <td><%= item.type_item %></td>
        <td><%= item.description %></td>
        <td><%= item.aditional %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item, class:'btn btn-outline-success btn-sm text-success p-0.15'%></td>
        <td><%= link_to 'Edit', edit_item_path(item), class:'btn btn-outline-info btn-sm text-info p-0.15' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger btn-sm text-danger p-0.15'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<h5 class="text-center font-weight-lig text-success"><%= notice %></h5>
<br>

</div>
<br>

<button type="button" class="btn btn-primary btn-block"><%= link_to 'New Item', new_item_path, class: 'text-black' %></button>
